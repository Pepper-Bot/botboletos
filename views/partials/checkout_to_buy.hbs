<div class="section">
    <div class="row">



        <div class="card col s12">
            <div class="row">
                <div class="input-field col s2">
                    <label>Event </label>
                </div>
                <div class="input-field col s2">
                    <label>Date</label>
                </div>
                <div class="input-field col s2">
                    <label>Seats</label>
                </div>
                <div class="input-field col s2">
                    <label>Quantity</label>
                </div>

                <div class="input-field col s1">
                    <label>Price Each </label>
                </div>
            </div>

        </div>



        <div class="col m12 ">
            <h4 class="header left blue-text">Checkout Process</small>
            </h4>
            <table class="responsive-table">
                <thead>
                    <tr>
                        <th>Event</th>
                        <th>Date</th>
                        <th>Seats</th>
                        <th> Quantity</th>
                        <th>Price Each</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>{{{event_name}}}</td>
                        <td>{{{event_date}}}</td>
                        <td>
                            <b>Section:</b>{{{section}}}
                            <br>
                            <b>Row</b>: {{{row}}} </td>
                        <td>{{{quantity}}}</td>
                        <td>${{{price}}}</td>
                    </tr>
                    <tr>
                        <td>
                            <b>Ticket Type: </b>
                            <span class="new badge green">{{{format}}} </span>
                        </td>
                        <td colspan="2"></td>
                        <td>
                            <strong>Total</strong>
                        </td>
                        <td>{{{ total }}} </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>



<div class="section">
    <div class="card row">
        <div class="row">
            <div class="col s12 l5">
                <div class="row">
                    <div class="col s6">
                        <b>Event</b>
                    </div>
                    <div class="col s6">
                        <b>Date</b>
                    </div>
                </div>
                <div class="divider"></div>
                <div class="row">
                    <div class="col s6">{{{event_name}}}</div>
                    <div class="col s6">{{{event_date}}}</div>
                </div>
                <div class="row">
                    <div class="input-field col s6">
                        <b>Ticket Type: </b>
                    </div>
                    <div class="input-field col s6">
                        <span class="new badge green">{{{format}}} </span>
                    </div>
                </div>
            </div>
            <div class="col s12 l2">
                <div class="row">
                    <div class="col s12">
                        <b> Seats</b>
                    </div>
                </div>
                <div class="divider"></div>
                <div class="row">
                    <div class="col s12">
                        <b>Section:</b>{{{section}}} </div>
                </div>
                <div class="row">
                    <div class="col s12">
                        <b>Row</b>: {{{row}}} </td>
                    </div>
                </div>
            </div>
            <div class="col s12 l5">
                <div class="row">
                    <div class="col s6">
                        <b>Quantity</b>
                    </div>
                    <div class="col s6">
                        <b>Price Each</b>
                    </div>
                </div>
                <div class="divider"></div>
                <div class="row">
                    <div class="col s6">{{{quantity}}}</div>
                    <div class="col s6">${{{price}}}</div>
                </div>
                <div class="row">
                    <div class="col s6">Total</div>
                    <div class="col s6">$ {{{total}}}</div>
                </div>
            </div>
        </div>
    </div>
</div>